@model lab6.Models.CountryCodeModel

<head>
    <style>
        .scrollable-list {
            max-height: 400px;
            overflow-y: auto;
            border: 1px solid #ccc; 
            padding: 10px; 
        }
    </style>
</head>

<h1>ISOCountryCode</h1>

<form method="post" enctype="multipart/form-data" asp-controller="CountryCode" asp-action="CountryCode">
    <div class="form-group container">
        <h4>Пошук за CountryCode:</h4>
        <textarea id="inputText" class="form-control" rows="1" type="text" class="form-control" id="pinput" asp-for="CountryCodeToSearch"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Пошук</button>
</form>

<hr />

<div class="scrollable-list">
    @foreach (var item in Model.ISOCountryCodes)
    {
        <div>
            <h3>@item.CountryCode</h3>
            <p>@item.CountryName</p>
        </div>
    }
</div>
