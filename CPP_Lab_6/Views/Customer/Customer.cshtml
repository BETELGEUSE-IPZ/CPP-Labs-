@model lab6.Models.CustomerModel

<head>
    <style>
        .scrollable-list {
            max-height: 400px;
            overflow-y: auto;
            border: 1px solid #ccc;
            padding: 10px;
        }
    </style>
</head>

<h1>MDMCustomer</h1>

<form method="post" enctype="multipart/form-data" asp-controller="Customer" asp-action="Customer">
    <div class="form-group container">
        <h4>Пошук за Id:</h4>
        <textarea id="inputText" class="form-control" rows="1" type="text" class="form-control" id="pinput" asp-for="IdToSearch"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Пошук за Id</button>
</form>

<hr />

<form method="post" enctype="multipart/form-data" asp-controller="Customer" asp-action="Customer">
    <div class="form-group container">
        <h4>Початкова дата:</h4>
        <textarea id="inputText" class="form-control" rows="1" type="text" class="form-control" id="pinput" asp-for="DateStart"></textarea>
    </div>
    <div class="form-group container">
        <h4>Кінцева дата:</h4>
        <textarea id="inputText" class="form-control" rows="1" type="text" class="form-control" id="pinput" asp-for="DateEnd"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Пошук за датами</button> 
</form>

<hr />

<form method="post" enctype="multipart/form-data" asp-controller="Customer" asp-action="Customer">
    <div class="form-group container">
        <h4>Пошук за запитом:</h4>
        <textarea id="inputText" class="form-control" rows="1" type="text" class="form-control" id="pinput" asp-for="Query"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Пошук за запитом</button>
</form>

<hr />

<div class="scrollable-list">
    @foreach (var item in Model.Customers)
    {
        <div>
            <h3>@item.CustomerId</h3>
            <p>@item.DateOfBirth.ToString("dd.MM.yyyy")</p>
            <p>@item.OtherDetails</p>
            <p>@item.AddressLine1, @item.AddressLine2, @item.AddressLine3, @item.Postcode</p>
            <p>@item.CityTown, @item.Country (@item.ISOCountryCode - @item.ISOCountryName)</p>
        </div>
    }
</div>
