@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}


<div class="text-danger" asp-validation-summary="All"></div>
<form method="post">
    <input type="hidden" asp-for=Post.ReturnUrl value=@Model.View.ReturnUrl />
    <div class="mt-3">
        <label class="form-label" asp-for=Post.Email>Пошта</label>
        <input class="form-control"
               asp-for=Post.Email
               value=@Model.View.Email />
    </div>
    <div class="mt-3">
        <label class="form-label" asp-for=Post.Password>Пароль</label>
        <input class="form-control"
               type="password"
               asp-for=Post.Password
               value=@Model.View.Password />
    </div>
    <button class="btn btn-primary mt-3" type="submit">Ввійти</button>
</form>